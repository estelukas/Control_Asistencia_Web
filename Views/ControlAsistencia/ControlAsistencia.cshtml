@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Entrada/Salida</title>
   
    <style>
        .container {
            position: relative;
            display: inline-block;
        }

        video, canvas {
            display: block;
            width: 100%;
            height: auto;
            transform: scaleX(-1);
        }

        canvas {
            position: absolute;
            top: 0;
            left: 0;
        }

        .card {
            width: 100%;
            max-width: 22rem;
        }

        .progress {
            height: 20px;
        }

       
    </style>
</head>
<body class="bg-light">
    <div class="container d-flex flex-column align-items-center py-5">

        <!-- Botón para recargar permisos de cámara (alineado a la izquierda) -->
        <div class="text-start mb-3">
            <button id="recargarButton" class="btn btn-warning">Recargar Permisos</button>
        </div>

        <!-- Tarjeta principal -->
        <div class="card">
            <div class="card-body text-center">

                <!-- Logo -->
                <div class="text-center mb-3">
                    <img src="~/assets/images/logos/logo-4.png" alt="Logo" class="img-fluid" style="max-width: 250px;">
                </div>

                <!-- Título -->
                <h3 class="text-center mb-3">Control de Asistencia</h3>

                <!-- Video -->
                <div class="mb-3">
                    <div class="container">
                        <video id="video" autoplay playsinline muted></video>
                        <canvas id="canvas"></canvas>
                    </div>
                </div>

                <!-- Barra de progreso -->
                <div class="progress mb-3">
                    <div id="Progressbar" class="progress-bar bg-success progress-bar-striped" role="progressbar"
                         style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                        50%
                    </div>
                </div>

                <!-- Entrada/Salida con Radiobuttons -->
                <div class="mb-4 text-center">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="entradaSalidaOptions" id="entradaOption" value="entrada" checked>
                        <label class="form-check-label" for="entradaOption">Entrada</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="entradaSalidaOptions" id="salidaOption" value="salida">
                        <label class="form-check-label" for="salidaOption">Salida</label>
                    </div>
                </div>

                <!-- Selector de empleado -->
                <div class="mb-4">
                    <select class="form-select" aria-label="Seleccione empleado">
                        <option selected>Kevin</option>
                        <!-- Agregar más opciones según sea necesario -->
                    </select>
                </div>

                <!-- Botón -->
                <button class="btn btn-success w-100">Registrar</button>

                <!-- Información de Entrada/Salida como botones -->
                <div class="mt-4 text-center d-flex justify-content-center gap-3">
                    <button type="button" class="btn btn-outline-success">Entrada: 08:35 A.M.</button>
                    <button type="button" class="btn btn-outline-danger">Salida: 16:05 P.M.</button>
                </div>
            </div>
        </div>
    </div>

    <div id="urlSeleccionarDatos" data-action-url="@Url.Action("Control_Asistencia_SeleccionarDatos", "ControlAsistencia")"></div>
    <div id="urlCompararFotos" data-action-url="@Url.Action("CompararRostro", "ControlAsistencia")"></div>
    
    <!-- Script -->
    @section Scripts {
        <script src="~/js/ControlAsistencia.js" asp-append-version="true"></script>
    }
</body>
</html>
