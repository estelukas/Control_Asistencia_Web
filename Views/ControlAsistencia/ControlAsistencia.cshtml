@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Entrada/Salida</title>
    <!-- MDBootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container d-flex flex-column align-items-center py-5">
        <div class="text-center">
            <img src="~/assets/images/logos/logo-4.png" alt="Logo" style="max-width: 150px;">
        </div>
        <div class="card mt-4" style="width: 22rem;">
            <div class="card-body text-center">
                <div class="mb-3">
                    <img src="~/assets/images/logos/pngegg.png" alt="Foto de perfil" class="img-fluid rounded-circle" style="width: 150px; height: 150px;">
                </div>
                <div class="progress mb-3">
                    <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <div class="form-check form-switch d-flex justify-content-center mb-4">
                    <input class="form-check-input" type="checkbox" id="entradaSalidaSwitch">
                    <label class="form-check-label ms-2" for="entradaSalidaSwitch">Entrada/Salida</label>
                </div>
                <div class="mb-4">
                    <select class="form-select" aria-label="Seleccione empleado">
                        <option selected>Kevin</option>
                        <!-- Agregar más opciones según sea necesario -->
                    </select>
                </div>
                <button class="btn btn-success">Registrar</button>
            </div>
        </div>
        <div class="mt-4 text-center">
            <p>Entrada: 08:35 A.M.</p>
            <p>Salida: 16:05 P.M.</p>
        </div>
    </div>
    <!-- MDBootstrap JS -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.js"></script>
</body>
</html>


<div id="urlSeleccionarDatos" data-action-url="@Url.Action("Control_Asistencia_SeleccionarDatos", "ControlAsistencia")"></div>

<!-- Script -->
@section Scripts {

    <script src="~/js/ControlAsistencia.js" asp-append-version="true"></script>
}